@using PeopleTableDataBase
@model IEnumerable<person>

<h2>People Table</h2>

<input placeholder="first name" class="form-control" style="display: inline-block; margin-left: 50px" id="firstName-input" />
<input placeholder="last name" class="form-control" style="display: inline-block; margin-left: 50px" id="lastName-input" />
<input placeholder="age" class="form-control" style="display: inline-block; margin-left: 50px" id="age-input" />
<button class="btn btn-success" style="display:inline-block; margin-left: 50px" id="add-button">Add</button>
<div class="container" style="padding: 50px" id="table-space">
    <table class="table table-striped table-bordered" id="people-table">
        <tbody id="table-body">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
                <th>options</th>
            </tr>
            @foreach (person p in Model)
            {
                <tr>
                    <td>@p.firstName</td>
                    <td>@p.lastName</td>
                    <td>@p.age</td>
                    <td>
                        <button id="delete-button" data-id="@p.id" class="btn btn-danger delete" style="margin-left:10px">delete</button>
                        <button id="edit-button" data-id="@p.id" class="btn btn-info edit" style="margin-left:10px">edit</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal" tabindex="-1" role="dialog" id="edit-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" style="position:center">Edit Person</h3>
                <button type="button" class="dismiss" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body container" style="color:lightblue">
                    <div class="container" style="margin-top:15px; margin-bottom:15px">
                        <input style="position:center; margin-bottom:15px" type="text" class="form-control col-md-4" id="first-name" placeholder="first name" />
                    </div>
                    <div class="container" style="margin-bottom:15px">
                        <input style="position:center" type="text" class="form-control col-md-4" id="last-name" placeholder="last name" />
                    </div>
                    <div class="container" style="margin-bottom: 15px">
                        <input style="position:center" type="text" class="form-control col-md-4" id="age" placeholder="age" />
                    </div>
            </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success update" id="update-button" data-id="0">Save and Close</button>
                    <button type="button" class="btn btn-secondary cancel dismiss" id="close-button" data-dismiss="modal">Cancel</button>
                </div>
            </div>
    </div>
</div>

@section scripts{

    <script src="~/Scripts/Index.js"></script>
}